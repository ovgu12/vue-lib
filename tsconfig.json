{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "types": [
      "node",
      "jest",
      "vue"
    ],
    "lib": [
      "esnext",
      "dom",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/demo",
    "src/main.ts",
    "tests"
  ]
}
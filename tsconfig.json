{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist/esm",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "types": ["jest", "vue"],
    "lib": ["esnext", "dom", "scripthost"]
  },
  "exclude": ["src/**/*.spec.ts"]
}
